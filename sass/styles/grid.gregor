/* GRID SYSTEM */
/* 960px wide grid - 12 column grid solution */
/* Each column width - 100%/12 = 8.33% */
/* All rows should be wrapped in a div */
/* All columns should be wrapped in a 'row' div and add up to 12 per row */

/* For mobile portrait phones all columns will take 100% */
[class*="col-"] {
    width: 100%;
}
.col-sm-1 {width:8.33%;float:left;}
.col-sm-2 {width: 16.66%;float:left;}
.col-sm-3 {width: 25%;float:left;}
.col-sm-4 {width: 33.33%;float:left;}
.col-sm-5 {width: 41.66%;float:left;}
.col-sm-6 {width: 50%;float:left;}
.col-sm-7 {width: 58.33%;float:left;}
.col-sm-8 {width: 66.66%;float:left;}
.col-sm-9 {width: 75%;float:left;}
.col-sm-10 {width: 83.33%;float:left;}
.col-sm-11 {width: 91.66%;float:left;}
.col-sm-12 {width: 100%;float:left;}

.row:after{
    content: "";
    clear: both;
    display: table;
}

/*******Media Queries ********/

/* Mobile landscape */
@media screen and (min-width: 600px)
and (orientation : landscape){
.col-ml-1 {width:8.33%;float:left;}
.col-ml-2 {width: 16.66%;float:left;}
.col-ml-3 {width: 25%;float:left;}
.col-ml-4 {width: 33.33%;float:left;}
.col-ml-5 {width: 41.66%;float:left;}
.col-ml-6 {width: 50%;float:left;}
.col-ml-7 {width: 58.33%;float:left;}
.col-ml-8 {width: 66.66%;float:left;}
.col-ml-9 {width: 75%;float:left;}
.col-ml-10 {width: 83.33%;float:left;}
.col-ml-11 {width: 91.66%;float:left;}
.col-ml-12 {width: 100%;float:left;}
}

